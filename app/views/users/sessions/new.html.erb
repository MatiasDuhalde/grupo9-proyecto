<section id="user_index_img" class="hero is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column"></div>
        <div class="column is-half">
          <h2 class="title has-text-white has-text-centered">Iniciar Sesión</h2>
          <div class="box">
            <div id="centrado" class="container">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email, class:"label"%>
                  <%= f.email_field :email, autofocus: true, class:"input" %>
                </div>

                <div class="field">
                  <%= f.label "Contraseña", class:"label"%>
                  <%= f.password_field :password, class:"input" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label "Recordar" %>
                  </div>
                <% end %>

                <div class="actions">
                  <%= f.submit "Iniciar Sesión", class:"button is-primary" %>
                </div>
              <% end %>

              <br>
              <%= render "users/shared/links" %>
              <br>
            </div>
          </div>
          <button id="buttonuser" class="button">
            <%= link_to "Volver a la pagina principal", root_path %>
          </button>
        </div>
        <div class="column"></div>
      </div>
    </div>
  </div>
</section>