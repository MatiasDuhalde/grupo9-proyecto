
<h1>Creando Nueva Gusto</h1>

<%= form_with(model: @gusto, method: :post) do |f| %>

    <div class="field" >

        <%= f.label :gusto_nombre %>
        <%= f.text_field :gusto_nombre %>

    </div>

    <div class="field" >

        <%= f.label :gusto_descripcion %>
        <%= f.text_area :gusto_descripcion %>

    </div>

    <div class="actions">
        <%= f.submit %>
    </div>

<% end %>

<%= link_to "Volver al listado de comunas", gustos_index_path %>
