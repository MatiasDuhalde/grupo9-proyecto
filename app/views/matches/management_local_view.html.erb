                              <div class="level-left">
                                <a class="level-item">
                                  <%= link_to "Cambiar a este Local", matches_change_local_path(:match_id => @match.id, :user_type => user_type, :local_id => local.id), method: :patch %>
                                </a>
                              </div>
                            </nav>
                          </div>
                        </article>
