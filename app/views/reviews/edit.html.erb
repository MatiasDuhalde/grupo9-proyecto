<section id="user_img" class="hero is-fullheight">
  <div class="hero-body">
    <div class="container">
      <div class="columns">
        <div class="column"></div>
        <div class="column">
          <h2 class="title has-text-white has-text-centered">Edita tu review</h2>
          <div class="box">
            <div class="container">
              <%= form_with(model: @review, method: :post) do |f| %>
                <div class="field">
                  <%= f.label :calificacion, class:"label"  %>
                  <%= f.number_field :calificacion, in: 1...11, required: true, class:"input" %>
                </div>

                <div class="field">
                  <%= f.label :comentario, class:"label" %>
                  <%= f.text_area :comentario, class:"textarea"  %>
                </div>

                <div class="actions">
                  <div class="columns">
                  <div class="column"></div>
                  <div class="column"><%= f.submit %></div>
                  <div class="column"></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <button id="buttonuser" class="button">
            <%= link_to "Volver al listado de reviews", reviews_index_path %>
          </button>
        </div>
        <div class="column"></div>
      </div>
    </div>
  </div>
</section>